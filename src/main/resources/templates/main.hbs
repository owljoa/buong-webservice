<!DOCTYPE HTML>
<html>
    <head>
        <title>Spring Boot WebService</title>
        <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <!-- link to bootstrap library -->
        <link rel="stylesheet" href="/css/lib/bootstrap.min.css">
    </head>
    <body>
        <h1>WebService Starting with Spring Boot</h1>

        <div class="col-md-12">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#savePostsModal">Add</button>
            <br />
            <br />
            <!-- print post list -->
            <table class="table table-horizontal table-bordered">
                <thead class="thead-strong">
                    <tr>
                        <th>Post No.</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Last Modified</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                {{#each posts}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{author}}</td>
                        <td>{{modifiedDate}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>

        <!-- Modal area -->
        <div class="modal fade" id="savePostsModal" tabindex="-1" role="dialog" aria-labelledby="savePostsLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="savePostsLabel">Add Post</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" id="title" placeholder="Enter title" />
                            </div>
                            <div class="form-group">
                                <label for="author">Author</label>
                                <input type="text" class="form-control" id="author" placeholder="Enter author" />
                            </div>
                            <div class="form-group">
                                <label for="content">Content</label>
                                <input type="text" class="form-control" id="content" placeholder="Enter content" />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" id="btn-save">Confirm</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- add bootstrap js, jquery -->
        <script src="/js/lib/jquery.min.js"></script>
        <script src="/js/lib/bootstrap.min.js"></script>

        <!-- custom js 추가 -->
        <script src="/js/app/main.js"></script>
    </body>
</html>